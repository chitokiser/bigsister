rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to products
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // Allow users to manage their own ratings on products
    match /products/{productId}/ratings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow public read access to agents
    match /agents/{agentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // Allow users to manage their own ratings on agents
    match /agents/{agentId}/ratings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow public read access to notices
    match /notices/{document=**} {
      allow read: if true;
      allow write: if false; // Or some admin rule
    }

    // Allow authenticated users to read user profiles
    match /users/{userId} {
      allow read: if request.auth != null;
    }
  }
}